using System; 
using System.Collections.Generic; 
 
class MainClass 
{ 
    record Person(int Id, string FirstName, string LastName); 
 
    static int idCounter = 0; 
    static List<Person> people = new List<Person>(); 
 
    public static void Main(string[] args) 
    { 
        while (true) 
        { 
            Console.WriteLine("1. Add a person"); 
            Console.WriteLine("2. Edit a person"); 
            Console.WriteLine("3. Remove a person"); 
            Console.WriteLine("4. List all persons"); 
            Console.WriteLine("0. Exit"); 
            Console.Write("Enter your choice: "); 
            int choice = Convert.ToInt32(Console.ReadLine()); 
 
            switch (choice) 
            { 
                case 1: 
                    AddPerson(); 
                    break; 
                case 2: 
                    EditPerson(); 
                    break; 
                case 3: 
                    RemovePerson(); 
                    break; 
                case 4: 
                    ListAllPersons(); 
                    break; 
                case 0: 
                    return; 
            } 
        } 
    } 
 
    static void AddPerson() 
    { 
        Console.Write("Name: "); 
        string fn = Console.ReadLine(); 
 
        Console.Write("LastName: "); 
        string ln = Console.ReadLine(); 
 
        Person user = new Person(++idCounter, fn, ln); 
        people.Add(user); 
 
        Console.WriteLine("Person added successfully"); 
    } 
 
    static void EditPerson() 
    { 
        Console.Write("Enter the id of the person you want to edit: "); 
        int id = Convert.ToInt32(Console.ReadLine()); 
 
        Person person = people.Find(p => p.Id == id); 
        if (person == null) 
        { 
            Console.WriteLine("No person found with id " + id); 
            return; 
        } 
 
        Console.Write("Enter the new first name: "); 
        string newFirstName = Console.ReadLine(); 
 
        Console.Write("Enter the new last name: "); 
        string newLastName = Console.ReadLine(); 
 
        int index = people.IndexOf(person); 
        people[index] = person with { FirstName = newFirstName, LastName = newLastName }; 
 
        Console.WriteLine("Person edited successfully"); 
    } 
 
    static void RemovePerson() 
    { 
        Console.Write("Enter the id of the person you want to remove: "); 
        int id = Convert.ToInt32(Console.ReadLine()); 
 
        Person person = people.Find(p => p.Id == id); 
        if (person == null) 
        { 
            Console.WriteLine("No person found with id " + id); 
            return; 
        } 
 
        people.Remove(person); 
 
        Console.WriteLine("Person removed successfully"); 
    } 
 
    static void ListAllPersons() 
    { 
        Console.WriteLine("Id\tFirst Name\tLast Name"); 
        foreach (var person in people) 
        { 
            Console.WriteLine(person.Id + "\t" + person.FirstName + "\t\t" + person.LastName); 
        }
    }
 }
