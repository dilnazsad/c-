[HttpPost]
[Route("person/add")]
public IActionResult AddPerson([FromBody] PersonDto personDto)
{
    // Convert the DTO to a Person object
    Person person = new Person(ID, personDto.FirstName, personDto.LastName);
    ActiveList.Add(person);
    ID++;

    // Save the data to a file
    Save("active.json", ActiveList);

    // Return a 201 Created response with the new person
    return CreatedAtRoute("GetPersonById", new { id = person.ID }, person);
}
